{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Script: uv run ${file}",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                // "panel": "new", // <-- uncomment for presistent panels
                "focus": true
            },
            "problemMatcher": []
        }
    ]
}